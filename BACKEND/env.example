# Copiar a .env y ajustar valores
# Servidor
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=clave-secreta-cambiar-en-produccion
JWT_EXPIRES_IN=7d

# Base URL de la API
API_BASE_URL=http://localhost:3000

# Ruta de evidencias
UPLOAD_DIR=./uploads

